<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <!-- Checkmark Icon -->
    <ImageView
        android:id="@+id/checkmark_icon"
        android:layout_width="139dp"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/congratulate" />

    <!-- Congratulations Text -->
    <TextView
        android:id="@+id/congratulations_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkmark_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Поздравляю!"
        android:textColor="#000000"
        android:textSize="30sp" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы успешно прошли игру!"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/congratulations_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- Score Text -->
    <TextView
        android:id="@+id/game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очки: 3 из 10"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/success_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- Play Again Button -->
    <Button
        android:id="@+id/button_play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#8A19D6"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Еще раз"
        android:textColor="#FFFFFF" />

    <!-- Main Menu Button -->
    <Button
        android:id="@+id/button_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_play_again"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#8A19D6"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Меню"
        android:textColor="#FFFFFF" />
</RelativeLayout>
