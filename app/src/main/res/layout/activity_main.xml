<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/foto_perfil" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="22dp"
            android:text="Имя"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Welcome Card -->

            <!-- Progress Bar -->

            <!-- Lesson Section -->
            <RelativeLayout
                android:layout_width="335dp"
                android:layout_height="156dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_violet2"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="150dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="70dp"
                    android:background="@drawable/round_violet3"
                    android:gravity="center"
                    android:text="Фингерс"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="48dp"

                    android:layout_below="@+id/text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="-53dp"
                    android:layout_marginBottom="20dp"
                    android:text="Добро пожаловать!"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="105dp"
                    android:layout_height="97dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/main_menu_fingers" />

            </RelativeLayout>

            <!-- Buttons -->

            <View
                android:id="@+id/view2"
                android:layout_width="219dp"
                android:layout_height="12dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/round_violet3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:text="Проходи уроки и изучай новые символы!"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/learn"
                    android:layout_width="290dp"
                    android:layout_height="101dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/round_violet3">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="123dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="127dp"
                        android:layout_marginBottom="70dp"
                        app:srcCompat="@drawable/bar" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="33dp"
                        android:layout_marginEnd="89dp"
                        android:gravity="center"
                        android:text="Теория "
                        android:textColor="@color/colorAccentDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="147dp"
                        android:layout_height="16dp"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="73dp"
                        android:layout_marginBottom="29dp"
                        android:gravity="center"
                        android:text="Узнавай новые символы!"
                        android:textColor="@color/colorAccentDark"
                        android:textSize="10sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/teoryaLiner"
                        android:layout_width="130dp"
                        android:layout_height="101dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/round_violet3">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="52dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="53dp"
                            app:srcCompat="@drawable/bar_chart" />

                        <TextView
                            android:id="@+id/teorya"
                            android:layout_width="76dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/imageView10"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="39dp"
                            android:layout_marginTop="-3dp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"
                            android:text="Теория"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textt"
                            android:layout_width="108dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/textView3"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginBottom="20dp"
                            android:text="Проходи теорию"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/trueOrFalse"
                        android:layout_width="130dp"
                        android:layout_height="101dp"
                        android:background="@drawable/round_violet3">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="52dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="53dp"
                            android:layout_marginBottom="67dp"
                            app:srcCompat="@drawable/graph" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="28dp"
                            android:layout_marginBottom="42dp"
                            android:gravity="center"
                            android:text="Да/Нет"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="117dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="13dp"
                            android:gravity="center"
                            android:text="Вспомни все символы!"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="10sp" />
                    </RelativeLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/chooseLetter"
                        android:layout_width="130dp"
                        android:layout_height="101dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/round_violet3">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="52dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="53dp"
                            android:layout_marginBottom="67dp"
                            app:srcCompat="@drawable/graph" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="28dp"
                            android:layout_marginBottom="33dp"
                            android:gravity="center"
                            android:text="Найди букву"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="117dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="13dp"
                            android:gravity="center"
                            android:text="Вспомни все символы!"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/chooseGeasture"
                        android:layout_width="130dp"
                        android:layout_height="101dp"
                        android:background="@drawable/round_violet3">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="52dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="53dp"
                            app:srcCompat="@drawable/bar_chart" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="76dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/imageView5"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="39dp"
                            android:layout_marginTop="-3dp"
                            android:layout_marginEnd="15dp"
                            android:text="Найти символ"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="108dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/textView6"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginBottom="8dp"
                            android:text="Найти нужный символ"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:weightSum="4">

        <Button
            android:id="@+id/main_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:drawableTop="@drawable/ic_learning"
            android:background="@color/white"
            android:text="Обучение" />

        <Button
            android:id="@+id/recognition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_recognition"
            android:text="Распознавание"
            android:textSize="8sp" />

        <Button
            android:id="@+id/training"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_training"
            android:text="Тренинг"
            android:textSize="10sp" />

        <Button
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_user"
            android:text="Профиль"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>
